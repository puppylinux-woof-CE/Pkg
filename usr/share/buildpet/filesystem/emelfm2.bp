package() {	
	# install the package
	make PREFIX=$INSTALL_DIR/usr install
	[ $? -ne 0 ] && return 1
	make PREFIX=$INSTALL_DIR/usr install_i18n
	[ $? -ne 0 ] && return 1
	
	# remove unneeded files
	rm -rf $INSTALL_DIR/usr/share/application-registry
	[ $? -ne 0 ] && return 1
		
	# add a symlink to the pixmap
	ln -s ./emelfm2/emelfm2_48.png $INSTALL_DIR/usr/share/pixmaps/emelfm2.png
	[ $? -ne 0 ] && return 1
	
	# fix the menu entry
	echo '[Desktop Entry]
Encoding=UTF-8
Name=emelFM2 file manager
Icon=emelfm2.png
Comment=emelFM2 file manager
Exec=emelfm2
Terminal=false
Type=Application
Categories=Utility;FileManager;
GenericName=emelFM2 file manager' > $INSTALL_DIR/usr/share/applications/emelfm2.desktop
	[ $? -ne 0 ] && return 1
	chmod 644 $INSTALL_DIR/usr/share/applications/emelfm2.desktop
	[ $? -ne 0 ] && return 1
	
	return 0
}
